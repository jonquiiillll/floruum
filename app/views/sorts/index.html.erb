<p id="notice"><%= notice %></p>

<h1>Sorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Display in navbar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sorts.each do |sort| %>
      <tr>
        <td><%= sort.name %></td>
        <td><%= sort.description %></td>
        <td><%= sort.display_in_navbar %></td>
        <td><%= link_to 'Show', sort %></td>
        <td><%= link_to 'Edit', edit_sort_path(sort) %></td>
        <td><%= link_to 'Destroy', sort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

