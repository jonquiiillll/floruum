
<div class="container_body_posts">
  <div class="content_posts">
    <div class="buttons">
      <% if notice %>
      <p class="notice"><%= notice %></p>
      <% elsif alert %>
      <p class="alert"><%= alert %></p>
      <% end %>
          <%= yield %>
    </div>
    <div class="categories">
      <div class="all_posts">
<%= link_to 'Все', posts_path %> </div>
<% Category.all.each do |cat| %>
   <div class="cat">
	<%= link_to cat.name, posts_path(category: cat.name) %> <br>
  </div>
<% end %>
    </div>
    <div class="container_content">
      <div class="container_posts">
    <% @posts.each do |post| %>

    <div class="window">
        <div class="preview" style='background-image: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.5) 100%), url(<%= post.image.url %>); background-size: cover !important;' >
          <div class="top_of_answer">
            <div class="table_tag">
              <td><%= post.category.name %></td>
            </div>
          </div>
          <div class="bottom_of_answer">
            <div class="main_information">
              <%= link_to post.name.length >= 40 ? post.name.slice(0..40) + '...' : post.name, post, :class => "title_of_answer"%>
            </div>
            <div class="user_info">
              <%= link_to(image_tag(post.user.avatar.question_thumb.url, alt: 'Avatar', :class => "avatar_round avatar_post"), post.user) if post.user.avatar? %>
              <%= post.user.username %> •
              <%= time_ago_in_words(post.created_at)%>
            </div>
          </div>
        </div>
          <div class="active">
          <div class="element_active_table">
            <%= link_to post.content.html_safe.length >= 10 ? post.content.slice(0..200) + '...' : post.content.html_safe, post, :class => "content_of_answer"%>
          </div>
          <hr>
          <div class="active_buttons_post">
            <div class="commentes">
              <%= image_tag 'Group.svg', :class => "icon"  %>
              <div class="count_comments"><%= post.comments.count %>
              </div>
            </div>
            <%= link_to post do %>
            <div class="doing_answer">
             <%= image_tag 'Action_answer.svg', :class => "icon"  %> <p>Ответить</p>
            </div>
            <% end %>
          </div>
          </div>
          </div>
         <% end %>
         </div>
         </div>
         </div>
         </div>
