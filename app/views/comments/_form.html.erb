<%= form_for([@post, @post.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :Пользователь %><br />
		<%= f.text_field :commenter %>
	</div>
	<div class="field">
		<%= f.label :Текст %><br />
		<%= f.text_area :body %>
	</div>
	<div class="actions">
		<%= f.submit 'Отправить' %>
	</div>
<% end %>
