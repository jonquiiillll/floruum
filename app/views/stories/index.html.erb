<p id="notice"><%= notice %></p>
<div class="sort_container_all" id="example">
  <a href="/stories" class="all_articles">Лучшее <br> на Florum</a>
<div class="hashtags_container">
<% Sort.all.each do |cat| %>
	<%= link_to cat.name, stories_path(sort: cat.name), class: "sort_element" %> <br>
<% end %>
</div>
</div>


<% if current_user.isadmin == true%>
<%= render "stories/admin" %>
<% else %>
<%= react_component 'M_TopArticle'%>
<% end %>

<div class="container_articles">
<%= react_component 'O_ArticleView', {stories: @stories, sorts: @sorts, sort: @sort, points: @points} %>
</div>
<%= react_component 'O_Footer' %>
