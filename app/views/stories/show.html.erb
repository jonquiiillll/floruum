<p id="notice"> <%= notice %></p>

  <%= react_component 'O_ArticleShow', {story: @story, sort: @sort} %>
<div class="actions--after--article">
<div class="likes">
  <%= react_component 'A_Counter', {story: @story, sort: @sort} %>
</div>

<div class="admin--actions">
  <% if current_user.isadmin == true%>
  <%= link_to image_tag("EditIcon.svg"), edit_story_path(@story), :class => "left--icon" %>
  <%= link_to image_tag("Trash.svg"), @story, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
</div>

  <div class="all_article_show comment">
    <%= render "stories/comments" %>
  </div>

<%= react_component 'O_Footer' %>
