<div class="new--story">


<%= form_with(model: story) do |form| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>
      <ul>
        <% story.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
 <p>Название</p>
    <%= form.text_field :name %>
  </div>
  <div class="field">
       <p>Категория</p>
      <%= form.select :sort_id, Sort.pluck(:name, :id) %>
  </div>

  <div>
  	 <p>Превью</p>
  	<%= form.file_field :picture %>
  </div>
  <div class="field">
       <p>Текст</p>
      <%= form.cktext_area :content %>
    </div>
  <div class="field">
  	 <p>Заметка</p>
  	<%= form.cktext_area :remark %>
  </div>

  <div class="actions">
    <%= form.submit 'Создать статью', :class => 'submit_reg--story' %>
  </div>
<% end %>
</div>
