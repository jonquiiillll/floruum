<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<%= react_component 'A_Tags', { categories: @categories } %>
<%= link_to 'New Hashtag', new_hashtag_path %>
<% Hashtag.where(display_in_navbar: true).each do |cat| %>
<%= link_to cat.name, articles_path(hashtag: cat.name) %> |
<% end %>
<h2>All Categories</h2>
<% Hashtag.all.each do |cat| %>
	<%= link_to cat.name, articles_path(hashtag: cat.name) %> <br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.hashtag.name %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
